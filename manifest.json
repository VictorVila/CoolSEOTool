{
	"manifest_version": 2,
	"name": "Cool SEO Tool 0.0.2.0",
	"short_name": "Cool SEO Tool",
	"description": "Simplify usual SEO tasks, onPage data, highlight semantic markup and extract links",
    "default_locale": "en",
	"version": "0.0.2.0",
	"icons":
	{
        "128": "img/icon-128.png",
        "64": "img/icon-64.png",
        "48": "img/icon-48.png",
        "32": "img/icon-32.png",
        "16": "img/icon-16.png"
   }, 
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "file://*/*",
    "contentSettings",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "browser_action":
  {
    "default_icon" : "img/icon-128.png",
	"default_popup": "menu.html",
    "default_title": "Cool SEO Tool 0.0.2.0"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
